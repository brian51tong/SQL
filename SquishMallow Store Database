INSERT INTO SquishMallow_Store VALUES(8, "Zebra", 25, 30, 4.5, "Large");
INSERT INTO SquishMallow_Store VALUES(9, "Dog", 100, 20, 5, "Medium");
INSERT INTO SquishMallow_Store VALUES(10, "Baby Deer", 35, 10, 3.7, "Small");

--Selecting all the data in the database and ordering them by the price 
Select * From SquishMallow_Store
ORDER By price;
