--creating a stuffed animal database
--creating the name of the store followed by the id that is unique to each animal and storing properties about each animal

CREATE TABLE SquishMallow_Store (id INTEGER PRIMARY KEY,Animal TEXT, Quantity INTEGER, Price INTEGER, Rating INTEGER, Size Text);

INSERT INTO SquishMallow_Store VALUES (1, "Duck", 50, 10, 2.5, "Small");
